{% layout 'theme' %}

<div class="page-width page-content">
  <h1 class="page-title">Login</h1>

  {% form 'customer_login' %}
    <label for="Email">Email</label>
    <input type="email" name="customer[email]" id="Email" required>

    <label for="Password">Password</label>
    <input type="password" name="customer[password]" id="Password" required autocomplete="current-password">

    <button type="submit" class="btn">Login</button>
  {% endform %}

  <p><a href="/account/register">Create Account</a> | <a href="/account/recover">Forgot Password?</a></p>
</div>
