{% layout 'theme' %}

<div class="page-width page-404">
  <div style="text-align: center; padding: 4rem 2rem;">
    <h1 style="font-size: 2.5em; margin-bottom: 1rem;">404 Page Not Found</h1>
    <p style="font-size: 1.2em; margin-bottom: 2rem;">The page you were looking for does not exist.</p>
    
    <div style="margin-bottom: 2rem;">
      <form action="/search" method="get" role="search">
        <label for="Search-In-404" style="display: block; margin-bottom: 1rem;">Search for something else:</label>
        <input
          type="search"
          name="q"
          id="Search-In-404"
          placeholder="Search..."
          style="padding: 0.5rem 1rem; margin-right: 0.5rem; border: 1px solid #ccc; border-radius: 4px;"
        >
        <button type="submit" style="padding: 0.5rem 1rem; background: #2F4538; color: white; border: none; border-radius: 4px; cursor: pointer;">
          Search
        </button>
      </form>
    </div>

    <div>
      <a href="/" style="display: inline-block; padding: 0.8rem 1.5rem; background: #2F4538; color: white; text-decoration: none; border-radius: 4px;">
        Return to Home
      </a>
    </div>
  </div>
</div> 