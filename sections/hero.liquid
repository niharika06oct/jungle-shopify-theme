{%- style -%}
  .hero {
    position: relative;
    height: 80vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    margin-top: -76px; /* Offset for transparent header */
  }

  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: 2;
  }

  .hero__content {
    position: relative;
    z-index: 3;
    max-width: 800px;
    padding: 2rem;
  }

  .hero__title {
    font-size: 3.5rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    color: white;
  }

  .hero__subtitle {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    line-height: 1.5;
    color: white;
  }

  .hero__button {
    display: inline-block;
    padding: 1rem 2rem;
    background-color: var(--accent-color);
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: background-color 0.2s;
  }

  .hero__button:hover {
    background-color: var(--secondary-color);
  }

  @media screen and (max-width: 768px) {
    .hero {
      min-height: 500px;
    }

    .hero__title {
      font-size: 2.5rem;
    }

    .hero__subtitle {
      font-size: 1.2rem;
    }
  }
{%- endstyle -%}

<div class="hero">
  {%- if section.settings.background_image != blank -%}
    {{ section.settings.background_image | image_url: width: 2000 | image_tag:
      loading: 'eager',
      class: 'hero__background',
      alt: section.settings.background_image.alt | escape
    }}
  {%- endif -%}
  <div class="hero__overlay"></div>
  
  <div class="hero__content">
    <h1 class="hero__title">{{ section.settings.title }}</h1>
    <div class="hero__subtitle">{{ section.settings.subtitle }}</div>
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="hero__button">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Welcome to Bambooz"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Discover our collection of sustainable bamboo products"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %} 